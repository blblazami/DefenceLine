<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    tools:context=".CreateReceiptVoucherActivity">

    <LinearLayout
        android:id="@+id/ll_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Please Enter Voucher Data:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="@color/light_white"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/realtime_date_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="left"
            android:text="Date:"
            android:fontFamily="serif-monospace"
            android:padding="0dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/voucher_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Voucher Number:"
            android:fontFamily="serif-monospace"
            android:gravity="left"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/datetextview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:background="@color/light_gray"
            android:layout_margin="3dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/voucher_number_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:drawablePadding="10dp"
            android:layout_margin="3dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textSize="20sp"/>

    </LinearLayout>

        <EditText
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_client_edit_text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:ems="10"
            android:hint="Name:"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/sum_of"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_client_edit_text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:ems="10"
            android:hint="Sum of:"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Payment Method:"
            android:textColor="@color/light_white"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/cash_chkbox"
            android:text="Cash"
            android:textColor="@color/light_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <CheckBox
            android:id="@+id/cheque_chkbox"
            android:text="Cheque"
            android:textColor="@color/light_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <CheckBox
            android:id="@+id/bank_transfer_chkbox"
            android:text="Bank Transfer"
            android:textColor="@color/light_white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_client_edit_text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:ems="10"
            android:hint="Bank Name:"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/transfer_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_client_edit_text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:ems="10"
            android:hint="Transfer Date:"
            android:textColorHint="@color/white"
            android:inputType="date"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/service_provided"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_client_edit_text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:ems="10"
            android:hint="Service Provided:"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/receiver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_black_border"
                android:backgroundTint="@color/light_red_2"
                android:drawablePadding="10dp"
                android:ems="10"
                android:padding="10dp"
                android:text="Zakaria Alazami"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </RelativeLayout>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_red_button"
            android:paddingStart="35dp"
            android:paddingTop="8dp"
            android:paddingEnd="35dp"
            android:paddingBottom="10dp"
            android:text="Save and Create Voucher"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

</ScrollView>