<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/red_cover"
    android:padding="5dp">



    <androidx.cardview.widget.CardView
        android:id="@+id/mainCardview"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/stamp"
                        android:layout_width="133dp"
                        android:layout_height="112dp"
                        android:src="@drawable/stamp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="16dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"
                                    android:text="Date" />

                                <TextView
                                    android:id="@+id/invoice_date"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="14dp"
                                    android:textColor="#DF6A90B5"
                                    android:layout_height="wrap_content"
                                    android:hint="date" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="16dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:layout_height="wrap_content"
                                    android:text="Invoice Number" />

                                <TextView
                                    android:id="@+id/invoice_number"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:textSize="14dp"
                                    android:textColor="#EE6A90B5"
                                    android:layout_height="wrap_content"
                                    android:hint="10001" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="35dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Name:"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/client_name"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/name"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:hint="Belal"/>
                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/client_name"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"
                        android:text="Phone number"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/phone_num"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/phone_number"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:hint="05*******"/>
                    <TextView
                        android:id="@+id/accountant"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:layout_below="@+id/phone_num"
                        android:textSize="16dp"
                        android:text="Accountant:"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/accountant_name"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/accountant"
                        android:lines="2"
                        android:textSize="16dp"
                        android:text="Zakaria Alazami"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/light_gray"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Price"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:text="Total"
                        android:layout_marginLeft="5dp"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/remaining"
                        android:layout_width="wrap_content"
                        android:text="Remaining"
                        android:layout_marginLeft="5dp"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price_view"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:hint="3500"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/total_view"
                        android:layout_width="wrap_content"
                        android:hint="2000"
                        android:layout_marginLeft="0dp"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/remainingTextView"
                        android:layout_width="wrap_content"
                        android:hint="1500"
                        android:layout_marginLeft="5dp"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textColor="@color/dark_red"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>