<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/main_LL"
        android:background="@drawable/red_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/single_service_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_gray"
            android:gravity="center"
            android:text="Single Service"
            android:textColor="@color/light_red"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/contract_service"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_gray"
            android:gravity="center"
            android:text="Contract Service"
            android:textColor="@color/light_red"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/invoice_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_gray"
            android:gravity="center"
            android:text="Create Invoice"
            android:textColor="@color/light_red"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/receipt_voucher"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_gray"
            android:gravity="center"
            android:text="Receipt Voucher"
            android:textColor="@color/light_red"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/clients_data"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_gray"
            android:gravity="center"
            android:text="Clients Data"
            android:textColor="@color/light_red"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>