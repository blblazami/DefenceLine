<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_cover"
    tools:context=".CreateVisitActivity">

    <LinearLayout
        android:id="@+id/ll_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="Please Fill Visit Data:"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="@color/light_white"
            android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/realtime_date_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="left"
            android:text="Visit Date:"
            android:fontFamily="serif-monospace"
            android:padding="0dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/visit_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Visit Number:"
            android:fontFamily="serif-monospace"
            android:gravity="left"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/datetextview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:background="@color/light_gray"
            android:layout_margin="3dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/visit_number_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:drawablePadding="10dp"
            android:layout_margin="3dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textSize="20sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_client_edit_text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:ems="10"
            android:hint="Name:"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/place_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_client_edit_text"
            android:textCursorDrawable="@drawable/cursor_color"
            android:ems="10"
            android:hint="Place Holder:"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/service_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_black_border"
                android:backgroundTint="@color/light_red_2"
                android:drawablePadding="10dp"
                android:ems="10"
                android:padding="10dp"
                android:text="Ahmed Alazami"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_provider">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:textAllCaps="false"
                android:background="@drawable/background_red_button"
                android:textColor="@color/white"
                android:gravity="center"
                android:src="@drawable/ic_calender"
                android:id="@+id/choose_date_btn_id"
                style="?attr/borderlessButtonStyle"/>

            <TextView
                android:id="@+id/date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:padding="10dp"
                android:layout_toEndOf="@id/choose_date_btn_id"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>

        </RelativeLayout>

        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/background_client_edit_text"
            android:ems="10"
            android:hint="Notes:"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_red_button"
            android:paddingStart="35dp"
            android:paddingTop="8dp"
            android:paddingEnd="35dp"
            android:paddingBottom="10dp"
            android:text="Save and Create Visit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>